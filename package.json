{
  "name": "steam-sales-analyzer",
  "version": "1.0.0",
  "description": "Interactive Steam sales data analyzer with graphs and analysis",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:tauri": "tauri dev",
    "prebuild": "npm run check",
    "build": "vite build",
    "prebuild:tauri": "npm run check",
    "build:tauri": "tauri build",
    "preview": "vite preview",
    "typecheck": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "npm run typecheck && eslint src --ext .ts,.svelte,.svelte.ts && prettier --check \"src/**/*.{ts,svelte,css,html}\"",
    "lint:fix": "eslint src --ext .ts,.svelte,.svelte.ts --fix && prettier --write \"src/**/*.{ts,svelte,css,html}\"",
    "format": "prettier --write \"src/**/*.{ts,svelte,css,html}\"",
    "check": "npm run lint",
    "update-check": "npx npm-check -u",
    "tauri": "tauri",
    "debug:db": "tsx src/scripts/debug-queries.ts"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "chart.js": "^4",
    "sqlocal": "^0.16.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@sveltejs/vite-plugin-svelte": "^6",
    "@tailwindcss/vite": "^4",
    "@tauri-apps/cli": "^2.9.6",
    "@tsconfig/svelte": "^5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.10",
    "better-sqlite3": "^12.6.2",
    "eslint": "^9",
    "eslint-plugin-svelte": "^3",
    "globals": "^17.0.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3",
    "svelte": "^5.48.0",
    "svelte-check": "^4",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8",
    "vite": "^7"
  },
  "engines": {
    "npm": ">=7.0.0"
  }
}
